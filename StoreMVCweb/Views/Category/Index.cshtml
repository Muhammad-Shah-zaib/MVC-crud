@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

@* Making a header for our this view *@
@if (TempData["success"] != null)
{
    <div class="row bg-success">
        <h3 class="text-light">@TempData["success"]</h3>
    </div>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category container</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> &nbsp; Create new Category</a>
        </div>
    </div>
</div>




<table class="table table-bordered table-outline-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Dssiplay Order</th>
            <th>Created Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    @obj.CreatedDate.Date
                </td>
                <td>
                    @* Navigation for edit and delete *@
                    
                    <a class="btn btn-outline-info py-2 px-4" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">
                        <i class="bi bi-pencil-square"></i> &nbsp; Edit
                    </a>
                    <a class="btn btn-outline-danger py-2 px-4" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">
                        <i class="bi bi-trash-fill"></i> &nbsp; Delete
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>